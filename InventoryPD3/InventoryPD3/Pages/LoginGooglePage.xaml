<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pages.LoginGooglePage"
              BackgroundColor="White">
    <ContentPage.Resources>
        <!--seção para style. Color Silimed #FF8257 -->
        <ResourceDictionary>
            <Style TargetType="Label">
                <!--style implícito-->
                <Setter Property="VerticalOptions" Value="Center"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="TextColor" Value="DarkGray"/>
            </Style>
            <Style TargetType="ImageButton">
                <!--style implícito <Setter Property="WidthRequest" Value="200"/>-->
                <Setter Property="VerticalOptions" Value="CenterAndExpand"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                
            </Style>    
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout>
            <ImageButton Source="btn_google_dark_normal_ios2x.png" Clicked= "OnLoginClicked" />
            <Label Text="Entre com sua conta Google"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>